    SMPL_SD                  Sampler_Data;
    SMPLLOOPS                loops[Num_Sample_Loops];

    //Padding so the next chunk starts on an even byte
     if( (chunkSize & 1) && !FEof(0.0) )
     uchar padding;

} SMPLCHUNK;



